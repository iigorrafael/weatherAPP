<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#E0E0E0"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewCidade"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <ImageView
        android:id="@+id/imageViewTempoPesquisa"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_alignTop="@+id/textViewCidade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <TextView
        android:id="@+id/temperaturaPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewCidade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/descricaoPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imageViewTempoPesquisa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_below="@+id/descricaoPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="PrÃ³ximos Dias"
                    android:textColor="#2196F3"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TableRow>

                    <TextView
                        android:id="@+id/textViewDia1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="66"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMaxDia1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMinDia1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textViewDia2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="66"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMaxDia2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMinDia2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textViewDia3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="66"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMaxDia3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMinDia3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textViewDia4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="66"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMaxDia4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMinDia4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textViewDia5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="66"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMaxDia5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewMinDia5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="33"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </TableRow>

                <TextView
                    android:id="@+id/textViewSunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/textViewSunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/textViewHumidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/textViewWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/horaPesquisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </TableLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>